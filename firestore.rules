rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to daily ETH metrics
    // Only authenticated admin or backend functions can write
    match /daily_metrics_eth/{document} {
      allow read: if true;
      allow write: if false; // Only admin SDK/functions should write
    }
    
    // Future collections can be added here with their specific rules
    // For now, allow all other access by default
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
